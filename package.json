{
  "name": "streall",
  "private": true,
  "version": "1.0.6",
  "description": "A streaming content browser application",
  "author": "Streall Team",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "start": "node start.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "echo \"ðŸŽ¬ Streall is ready! Visit http://localhost:5173\"",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "build-electron": "npm run build && cross-env NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-all": "npm run build && electron-builder --mac --win",
    "build-desktop": "npm run build && node scripts/build-desktop.js"
  },
  "dependencies": {
    "@ghostery/adblocker": "^2.7.0",
    "@ghostery/adblocker-electron": "^2.7.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/react-router-dom": "^5.3.3",
    "@use-gesture/react": "^10.3.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-fetch": "^4.1.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.519.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "react-spring": "^10.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "create-desktop-shortcuts": "^1.11.1",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.streall.app",
    "productName": "Streall",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "public/logo-256.png",
      "public/logo-512.png",
      "public/logo.ico"
    ],
    "icon": "public/logo.ico",
    "compression": "normal",
    "publish": null,
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "public/logo-512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "public/logo.ico",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
